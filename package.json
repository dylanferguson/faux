{
  "name": "faux",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:static": "npm run build && next export",
    "postbuild:static": "node ./scripts/generate-sitemap.js",
    "build:analyse": "ANALYZE=true next build",
    "start": "next start",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --max-workers=2 --ci",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run format:check && npm run eslint && npx tsc --noEmit",
    "format": "prettier --write '{src,scripts,cypress}/**/*.{tsx,ts,js}'",
    "format:check": "prettier --check '{src,scripts,cypress}/**/*.{tsx,ts,js}'",
    "lint": "eslint --quiet '{src,cypress}/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix '{src,cypress}/**/*.{ts,tsx}'",
    "predeploy": "rm -rf ./out && npm run build:static && rm -rf ./out/_next/static/development",
    "deploy": "wrangler publish",
    "docker:build": "docker build -t faux-site .",
    "docker:run": "docker run --env-file .env.local --rm -it -p 3000:3000 faux-site",
    "gcp:build-image": "gcloud builds submit --tag gcr.io/faux-279810/marketing-site",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:customer-journeys": "cypress run --spec 'cypress/integration/customer-journeys/**/*'",
    "contentful:generate-types": "contentful-typescript-codegen --output src/types/generated/contentful.d.ts ",
    "contentful:export-content": "node ./scripts/contentful-export.js",
    "contentful:import-content": "node ./scripts/contentful-import.js",
    "generate-barrels": "barrelsby --delete --directory './src/components' --location below",
    "lchi:deploy": "git subtree push --prefix lhci-server heroku master"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^13.4.0",
    "@sentry/browser": "^5.15.5",
    "algoliasearch": "^4.2.0",
    "classnames": "^2.2.6",
    "next": "^9.4.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "snarkdown": "^1.2.2"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "^1.9.2",
    "@contentful/rich-text-react-renderer": "^13.4.0",
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "@next/bundle-analyzer": "^9.4.4",
    "@sentry/webpack-plugin": "^1.11.1",
    "@types/algoliasearch": "^3.34.10",
    "@types/classnames": "^2.2.10",
    "@types/node": "^13.13.5",
    "@types/react": "^16.9.35",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "autoprefixer": "^9.7.6",
    "barrelsby": "^2.2.0",
    "contentful": "^7.14.4",
    "contentful-export": "^7.9.15",
    "contentful-import": "^7.8.0",
    "contentful-management": "^5.26.3",
    "contentful-typescript-codegen": "^3.2.1",
    "cypress": "^4.9.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.11.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "schema-dts": "^0.6.0",
    "tailwindcss": "^1.4.6",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,scripts,cypress}/**/*.{tsx,ts,js}": "prettier --write",
    "{src}/**/*.{tsx,ts,js}": "eslint --fix"
  }
}
