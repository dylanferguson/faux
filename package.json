{
  "name": "faux",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "build:analyse": "ANALYZE=true next build",
    "build:static": "npm run build && next export",
    "postbuild:static": "node ./scripts/generate-sitemap.js",
    "contentful:export-content": "node ./scripts/contentful-export.js",
    "contentful:generate-types": "contentful-typescript-codegen --output src/types/generated/contentful.d.ts ",
    "contentful:import-content": "node ./scripts/contentful-import.js",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:customer-journeys": "cypress run --spec 'cypress/integration/customer-journeys/**/*'",
    "predeploy": "rm -rf ./out && npm run build:static && rm -rf ./out/_next/static/development",
    "deploy": "wrangler publish",
    "dev": "next dev",
    "docker:build": "docker build -t faux-site .",
    "docker:run": "docker run --env-file .env.local --rm -it -p 3000:3000 faux-site",
    "format": "prettier --write '{src,scripts,cypress}/**/*.{tsx,ts,js}'",
    "format:check": "prettier --check '{src,scripts,cypress}/**/*.{tsx,ts,js}'",
    "gcp:build-image": "gcloud builds submit --tag gcr.io/faux-279810/marketing-site",
    "generate-barrels": "barrelsby --delete --directory './src/components' --location below",
    "lhci:deploy": "git subtree push --prefix lhci-server heroku master",
    "lint": "eslint --quiet '{src,cypress}/**/*.{ts,tsx}'",
    "lint:fix": "eslint --fix '{src,cypress}/**/*.{ts,tsx}'",
    "start": "next start",
    "test": "jest --coverage",
    "test:ci": "jest --coverage --max-workers=2 --ci",
    "test:prod": "npm run format:check && npm run eslint && npx tsc --noEmit",
    "test:watch": "jest --coverage --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,scripts,cypress}/**/*.{tsx,ts,js}": "prettier --write",
    "{src}/**/*.{tsx,ts,js}": "eslint --fix"
  },
  "dependencies": {
    "@contentful/rich-text-html-renderer": "^14.1.2",
    "@prefresh/next": "^1.5.0",
    "@sentry/browser": "^5.30.0",
    "algoliasearch": "^4.12.1",
    "classnames": "^2.3.1",
    "next": "^9.4.4",
    "preact": "^10.6.5",
    "preact-render-to-string": "^5.1.19",
    "react": "github:preact-compat/react#1.0.0",
    "react-dom": "github:preact-compat/react-dom#1.0.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.0.1",
    "snarkdown": "^2.0.0"
  },
  "devDependencies": {
    "@cloudflare/wrangler": "^1.19.7",
    "@contentful/rich-text-react-renderer": "^14.1.3",
    "@next/bundle-analyzer": "^9.5.3",
    "@sentry/webpack-plugin": "^1.18.4",
    "@tailwindcss/typography": "^0.2.0",
    "@types/algoliasearch": "^3.34.11",
    "@types/classnames": "^2.3.1",
    "@types/node": "^14.18.11",
    "@types/react": "^16.14.23",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "autoprefixer": "^9.8.8",
    "barrelsby": "^2.3.2",
    "contentful": "^7.15.2",
    "contentful-export": "^7.14.7",
    "contentful-import": "^7.9.42",
    "contentful-management": "^6.3.2",
    "contentful-typescript-codegen": "^3.2.3",
    "cypress": "^5.6.0",
    "dotenv": "^8.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "globby": "^11.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "postcss-100vh-fix": "^0.1.1",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.1",
    "prettier": "^2.5.1",
    "react-refresh": "^0.8.3",
    "schema-dts": "^0.7.4",
    "tailwindcss": "^1.9.6",
    "typescript": "^4.5.5"
  },
  "volta": {
    "node": "14.21.3"
  }
}
